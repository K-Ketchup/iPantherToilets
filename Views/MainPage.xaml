<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:iPantherToilets.Controls"
             x:Class="iPantherToilets.MainPage"
             Shell.NavBarIsVisible="False"
             x:Name="Main">

    <Grid>
        <ScrollView>
            <VerticalStackLayout
                VerticalOptions="End"
                Padding="20">

                <Image
                    Source="peninsula_map.png"
                    SemanticProperties.Description="Base map."
                    HeightRequest="550"
                    HorizontalOptions="Fill" 
                    VerticalOptions="Fill"
                    Aspect="AspectFill"  
                    Margin="5" />

                <ImageButton
                    x:Name="GoToInfoPage"
                    Clicked="GoToInfoPageButton_Clicked"
                    BorderColor="Black"
                    BorderWidth="1"
                    Source="schnoz2.png"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    WidthRequest="60"
                    HeightRequest="60"
                    CornerRadius="25"
                    Aspect="AspectFit"
                    Margin="0"/>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
